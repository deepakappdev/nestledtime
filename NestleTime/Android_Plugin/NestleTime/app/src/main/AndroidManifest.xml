<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bravvura.nestledtime.test">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.bravvura.nestledtime.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.bravvura.nestledtime.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.bravvura.nestledtime.sample.SampleActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bravvura.nestledtime.imageedittor.main.activity.EditPhotoActivity" />
        <activity
            android:name="com.bravvura.nestledtime.mediagallery.ui.MediaGalleryActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.bravvura.nestledtime.userstory.ui.activity.GoogleMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bravvura.nestledtime.userstory.ui.activity.SearchAddressListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bravvura.nestledtime.mediagallery.ui.MediaAlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bravvura.nestledtime.userstory.ui.activity.UserStoryMediaListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bravvura.nestledtime.userstory.ui.activity.UserStoryMediaPagerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.bravvura.nestledtime.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>